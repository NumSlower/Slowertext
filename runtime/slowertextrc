refresh_rate = 16
debug_mode = false

# File Settings
show_hidden_files = false

# Default Mode (insert or command)
default_mode = insert

# Key Bindings
enter_insert = ctrl+i
enter_command = escape
save_file = ctrl+s
quit_editor = ctrl+q
force_quit = ctrl+f
cursor_up = arrow_up
cursor_down = arrow_down
cursor_left = arrow_left
cursor_right = arrow_right

# Font (terminal dependent)
font = monospace